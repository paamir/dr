@page
@model ForgotpasswordModel
@{
    ViewData["Title"] = "تایید شماره موبایل";
}

<div class="page-content-area">
    <div class="container">
        @{
            await Html.RenderPartialAsync("Shared/StatusMessage", Model.Message);
        }
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-12">
                                <form method="post" id="SendVerificationCode" asp-page-handler="SendForgotPasswordCode">
                                    <div class="login-form">
                                        <div class="form__massage form__message--error"></div>
                                        <h4 class="login-title">وارد کردن ایمیل</h4>
                                        <div class="row">
                                            <div class="col-12">
                                                <label>ایمیل</label>
                                                <p>لطفا ایملیلی را که در زمان ثبت نام استفاده کردید را وارد نمایید</p>
                                                <input type="email" name="Email" placeholder="example@gmail.com">
                                            </div>
                                            <div class="col-md-12">
                                                <button class="register-button">ارسال کد</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <form id="verifyCodeForm" class="hideForm" method="post" asp-page-handler="VerifyCode">
                                    <input type="hidden" id="email" name="email" value=""/>
                                    <div class="login-form">
                                        <div class="form__massage form__message--error"></div>
                                        <h4 class="login-title">کد تایید</h4>
                                        <div class="row">
                                            <div class="col-md-12 mb-20">
                                                <label>کد تایید</label>
                                                <p>کد تاییدی که برای شما ارسال شده است را وارد کنید</p>
                                                <input type="text" name="token" class="form_input" placeholder="123456" required>
                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">بررسی کد</button>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/Theme/assets/js/Verification.js"></script>
}